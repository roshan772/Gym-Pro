# ── Hikvision Device Configuration ────────────────────────────────────────────
# Copy this file to .env and fill in your real values.
# NEVER commit .env to version control.

HIKVISION_HOST=192.168.8.150
HIKVISION_PORT=80
HIKVISION_USER=admin
HIKVISION_PASS=YOUR_DEVICE_PASSWORD_HERE
HIKVISION_DOOR_NO=1
HIKVISION_TIMEOUT_MS=8000

# Set to 1 to disable all device calls (dev / CI / testing)
DISABLE_DEVICE_SYNC=0
